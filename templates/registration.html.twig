{% block registration %}

  <!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
		<button type="button" class="close" data-dismiss="modal" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
    <div class="modal-content">
      <div class="modal-header">
				<div class="modal-header__wrapper">
					<h5 class="modal-title" id="exampleModalLabel">Регистрация</h5>
					<p class="modal-paragraph">У вас уже есть учетная запись? <a href="#">Войти</a></p>
				</div>
      </div>
      <div class="modal-body">
        <form class="modal__form">
					<div class="form-group">
						<input type="text" name="name" class="form-control modal__input" id="formGroupExampleInput" placeholder="Имя">
					</div>
					<div class="form-group">
						<input type="text" name="lastname" class="form-control modal__input" id="formGroupExampleInput" placeholder="Фамилия">
					</div>
					<div class="form-group">
						<input type="text" name="email" class="form-control modal__input" id="formGroupExampleInput" placeholder="Почта">
					</div>
					<div class="form-group">
						<input type="text" name="password" class="form-control modal__input" id="formGroupExampleInput" placeholder="Пароль">
					</div>
					<div class="form-group">
						<input type="text" name="repeatpassword" class="form-control modal__input" id="formGroupExampleInput" placeholder="Повторите пароль">
					</div>
				</form>
      </div>
			<div class="modal-or">
				<span>или</span>
			</div>
      <div class="modal-footer">
        <a href="#" class="btn modal-social-btn modal-social-vk">Вход через Вконтакте</a>
        <a href="#" class="btn modal-social-btn modal-social-fb">Вход через Facebook</a>
        <a href="#" class="btn modal-social-btn modal-social-ok">Вход через Одноклассники</a>
        <a href="#" class="btn modal-social-btn modal-social-gos">Вход через Госуслуги</a>
      </div>
    </div>
  </div>
</div>

{% endblock %}